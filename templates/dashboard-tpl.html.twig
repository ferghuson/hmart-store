{% extends 'base.html.twig' %}

{% block title %}{{ block('page') }}{% endblock %}

{% block body %}
    <div class="account-dashboard pt-100px pb-100px">
        <div class="container">
            <div class="row">
                <div class="col-sm-12 col-md-3 col-lg-3">
                    <!-- Nav tabs -->
                    <div class="dashboard_tab_button" data-aos="fade-up" data-aos-delay="0">
                        <ul role="tablist" class="nav flex-column dashboard-list">
                            <li><a href="{{ path('app_client_dashboard') }}" class="nav-link {% if block("title") == 'dashboard' %}active{% endif %}">Dashboard</a></li>
                            <li> <a href="" class="nav-link {% if block("title") == 'orders' %}active{% endif %}">Orders</a></li>
                            <li><a href="{{ path('app_address') }}" class="nav-link {% if 'address' in block("title") %}active{% endif %}">Addresses</a></li>
                            <li><a href="{{ path('app_client_profile') }}" class="nav-link {% if block("title") == 'profile' %}active{% endif %}">Profile</a>
                            <li> <a href="{{ path('app_client_password') }}" class="nav-link {% if block("title") == 'new password' %}active{% endif %}">Password</a></li>
                            </li>
                            <li><a href="{{ path('app_logout') }}" class="nav-link">logout</a></li>
                        </ul>
                    </div>
                </div>
                <div class="col-sm-12 col-md-9 col-lg-9">
                    <!-- Tab panes -->
                    <div class="tab-content dashboard_content" data-aos="fade-up" data-aos-delay="200">
                        {% block content %}{% endblock %}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}